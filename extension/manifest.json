{
    "manifest_version": 3,
    "name": "Cortex Browser",
    "version": "1.0",
    "description": "Intelligent browser automation",
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "sidePanel",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["*"],
        "matches": ["<all_urls>"]
      }
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    }
  }